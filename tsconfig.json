{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,    
    "noUnusedLocals": true,     // warn about unused variables and class members
    "noUnusedParameters": true, // warn about unused function parameters
    "noEmitOnError": false,     // optional: still emit files if you only want warnings
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

