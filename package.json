{
  "name": "multimodal-mcp",
  "version": "1.0.0",
  "description": "TypeScript MCP server for searching photo albums with multimodal AI capabilities",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "upload": "ts-node src/upload-images.ts",
    "mcp-server": "ts-node src/mcp-server.ts",
    "stdio-server": "ts-node src/stdio-server.ts",
    "ts-prune": "ts-prune",
    "lint": "eslint src/**/*.ts && npm run ts-prune",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "weaviate",
    "multimodal",
    "images",
    "typescript",
    "mcp",
    "model-context-protocol",
    "photo-search",
    "ai"
